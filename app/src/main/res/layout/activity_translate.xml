<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <EditText android:id="@+id/editTextWord" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="Enter word to translate" />

    <Spinner
        android:id="@+id/spinnerLanguage" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnTranslate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Translate" />
</LinearLayout>
